<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

  <bean id="projectServiceId"
    class="gitoscope.service.FileRepositoryService"
	scope="singleton">
	<property name="baseDirectory" value="/home/roman/projects/git"/>
  </bean>

  <bean id="commitServiceId"
    class="gitoscope.service.DefaultCommitService"
	scope="singleton">
  </bean>

  <bean id="treeBrowserServiceId"
    class="gitoscope.service.TreeWalkBrowserService"
	scope="singleton">
  </bean>

</beans>
