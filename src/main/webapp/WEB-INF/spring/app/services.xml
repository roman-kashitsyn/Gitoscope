<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="projectServiceId"
          class="gitoscope.service.impl.FileRepositoryService"
          scope="singleton">
        <property name="baseDirectory" value="/home/luyci/Projects/git"/>
    </bean>

    <bean id="commitServiceId"
          class="gitoscope.service.impl.DefaultCommitService"
          scope="singleton">
    </bean>

    <bean id="treeBrowserServiceId"
          class="gitoscope.service.impl.TreeWalkBrowserService"
          scope="singleton">
    </bean>

    <bean id="configurationService"
          class="gitoscope.service.impl.MultiSourceConfigurationService">
        <property name="baseDirectoryNames">
            <list>
                <value>/home/roman/Projects/git</value>
            </list>
        </property>
    </bean>

</beans>
